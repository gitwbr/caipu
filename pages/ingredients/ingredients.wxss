.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索栏样式 */
.search-bar {
  margin-bottom: 30rpx;
}

.search-input-container {
  position: relative;
  background: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx 20rpx 80rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  width: 100%;
  font-size: 32rpx;
  color: #333;
}

.search-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  color: #999;
}

.clear-btn {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999;
  padding: 10rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 28rpx;
}

/* 搜索结果 */
.search-results {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.results-header {
  padding: 20rpx 30rpx;
  background: #f8f8f8;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #666;
}

.food-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.food-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.food-item:active {
  background-color: #f5f5f5;
}

.food-item:last-child {
  border-bottom: none;
}

.food-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.food-nutrition {
  display: flex;
  gap: 30rpx;
  font-size: 26rpx;
  color: #666;
}

.food-nutrition text {
  flex: 1;
}

/* 无搜索结果 */
.no-results {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 食物详情弹窗 */
.food-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 30rpx 30rpx 0 0;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.close-btn {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  flex: 1;
  padding: 30rpx;
  max-height: 60vh;
}

.nutrition-section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.nutrition-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.nutrition-item {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.nutrition-item .label {
  font-size: 26rpx;
  color: #666;
}

.nutrition-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 默认提示 */
.default-tip {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.default-tip text {
  display: block;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.default-tip text:last-child {
  font-size: 24rpx;
  color: #ccc;
} 