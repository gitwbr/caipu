/* pages/profile/edit.wxss */
.edit-container {
  display: flex;
  flex-direction: column;
  align-items: stretch;
  padding: 40rpx 28rpx;
  background: #f6f7fb;
  min-height: 100vh;
  box-sizing: border-box;
}

.edit-avatar-box {
  margin-bottom: 28rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.edit-avatar {
  width: 168rpx;
  height: 168rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 6rpx 18rpx rgba(17,24,39,0.06);
}

.edit-avatar-tip {
  font-size: 24rpx;
  color: #6b7280;
  margin-top: 12rpx;
}

.edit-nickname-box {
  display: flex;
  align-items: center;
  gap: 6rpx;                  /* 缩小昵称标签与输入框间距 */
  margin-bottom: 24rpx;
}

.edit-card {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(17,24,39,0.06);
  box-sizing: border-box;
}

.edit-label {
  font-size: 28rpx;
  color: #475569;
  font-weight: 600;
  width: 180rpx;               /* 固定标签列宽，保证输入框起点对齐 */
  flex: 0 0 180rpx;
  text-align: left;            /* 文本靠左显示 */
  padding-right: 2rpx;         /* 更紧凑的标签与输入框距离 */
  box-sizing: border-box;
}

.edit-nickname-input {
  flex: 1;
  font-size: 30rpx;
  color: #111827;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 16rpx 10rpx;
  background: #fafafa;
}

.btn-row{ display:flex; flex-direction:column; gap:18rpx; margin-top: 16rpx; }
.edit-auth-btn {
  width: 100%;
  background: linear-gradient(135deg,#10b981,#06b6d4);
  color: white;
  border-radius: 999rpx;
  font-size: 30rpx;
  padding: 16rpx 0;
}

.edit-save-btn {
  width: 100%;
  background: linear-gradient(135deg,#6366f1,#2563eb);
  color: white;
  border-radius: 999rpx;
  font-size: 30rpx;
  padding: 16rpx 0;
}

/* 身体信息编辑 */
.edit-body-info {
  width: 100%;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;             /* 修复无效值 */
  margin-bottom: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(17,24,39,0.06);
}

.edit-section-title {
  color: #0f172a;
  font-size: 30rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
  display: block;
}

.edit-form-item {
  display: flex;
  align-items: center;
  gap: 6rpx;                  /* 缩小标签与输入框间距 */
  margin-bottom: 20rpx;
}

.edit-form-item:last-child {
  margin-bottom: 0;
}

.edit-input {
  flex: 1;
  font-size: 30rpx;
  color: #111827;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 16rpx 12rpx;        /* 收紧水平内边距，整体更紧凑 */
  background: #fafafa;
}

.edit-input:focus {
  border-color: #6366f1;
  background: white;
}

.edit-picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 20rpx;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  background: #fafafa;
}

.picker-text {
  color: #111827;
  font-size: 30rpx;
}

.picker-arrow {
  color: #94a3b8;
  font-size: 28rpx;
}