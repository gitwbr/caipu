/* pages/profile/profile.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
}

.profile-header {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 10rpx;
}

.edit-btn {
  margin-left: 10rpx;
  margin-top: 10rpx;
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  background: #e6f7ff;
  color: #1890ff;
  border: 1rpx solid #b3e5fc;
}

.profile-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.login-status {
  font-size: 24rpx;
  color: #07c160;
  background: #f0f9ff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  border: 1rpx solid #b3e5fc;
}

.auth-buttons {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.login-btn {
  width: 80%;
  margin-bottom: 20rpx;
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
}

.logout-btn {
  width: 80%;
  background-color: #ff4d4f;
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
}

.menu-list {
  width: 100%;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  font-size: 30rpx;
  color: #555;
  border-bottom: 1rpx solid #f2f2f2;
}

.menu-item:last-child {
  border-bottom: none;
}

.arrow {
  color: #999;
  font-size: 28rpx;
}

/* 身体信息 */
.body-info {
  width: 100%;
  margin-bottom: 40rpx;
}

.info-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}

.section-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: block;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 8rpx;
}

.info-label {
  color: #666;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.bmr-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  text-align: center;
  color: white;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.bmr-value {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin: 20rpx 0;
}

.bmr-desc {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
} 