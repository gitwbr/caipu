/* 首页样式 */
.page { padding: 0; }
.header { text-align: center; padding: 40rpx 0 64rpx 0; background: linear-gradient(135deg, #7d8ff2 0%, #8f7adf 100%); color: #fff; margin-bottom: 0; }

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 15rpx;
}

/* 用户限制信息样式 */
.user-limits {
  margin-top: 15rpx;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: inline-block;
}

.limits-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

/* 快速选项样式 */
.quick-options {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.quick-option {
  text-align: center;
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  flex: 1;
  margin: 0 10rpx;
  transition: all 0.3s ease;
}

.quick-option:active {
  transform: scale(0.95);
  background: #e9ecef;
}

.option-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.option-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 卡片标题样式 */
.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
  padding-bottom: 15rpx;
}

/* 食材选择器样式 */
.ingredient-categories {
  margin-bottom: 30rpx;
}

.ingredient-tabs {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
  margin: 0 0 12px 0;
  background: transparent;
  border-radius: 0;
  padding: 0 0 0 0;
  height: 36px;
  box-sizing: border-box;
}
.ingredient-tab {
  display: inline-block;
  padding: 6px 18px;
  margin: 0 8px 0 0;
  border-radius: 12px;
  background: #f5f5f5;
  color: #666;
  font-size: 15px;
  cursor: pointer;
  font-weight: 500;
  border: 1.5px solid transparent;
  transition: background 0.2s, color 0.2s, border 0.2s;
}
.ingredient-tab.active {
  background: #fff;
  color: #4a5cff;
  border: 1.5px solid #4a5cff;
  font-weight: bold;
}

.ingredient-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.ingredient-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.ingredient-item.selected {
  background: #e8f4fd;
  border-left: 4rpx solid #667eea;
}

.ingredient-info {
  flex: 1;
}

.ingredient-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.ingredient-category {
  font-size: 24rpx;
  color: #999;
  margin-top: 5rpx;
}

.ingredient-weight {
  width: 150rpx;
}

.weight-input {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 6rpx;
  font-size: 26rpx;
  text-align: center;
}

.selected-ingredients {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.selected-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 15rpx;
}

.selected-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.selected-item {
  padding: 8rpx 16rpx;
  background: #667eea;
  color: #fff;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 菜系选择器样式 */
.cuisine-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.cuisine-item {
  padding: 30rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.cuisine-item.active {
  background: #e8f4fd;
  border-color: #667eea;
}

.cuisine-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.cuisine-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 最近菜谱样式 */
.recipe-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
}

.recipe-item:last-child {
  border-bottom: none;
}

.recipe-item:active {
  background: #f8f9fa;
}

.recipe-info {
  flex: 1;
}

.recipe-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.recipe-name .fav-badge { margin-left: 10rpx; vertical-align: middle; }

.recipe-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.fav-badge { display: inline-block; margin-left: 10rpx; padding: 4rpx 12rpx; background: #fff0f0; color: #e03131; border: 2rpx solid #ffc9c9; border-radius: 999rpx; font-size: 22rpx; }

.recipe-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.recipe-arrow {
  font-size: 32rpx;
  color: #999;
  margin-left: 20rpx;
}

/* 最近生成-删除按钮 */
.recent-delete { position: absolute; right: 80rpx; top: 16rpx; width: 52rpx; height: 52rpx; border-radius: 50%; background: #f8f9fa; display: flex; align-items: center; justify-content: center; font-size: 26rpx; color: #e03131; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06); }
.recent-delete:active { transform: scale(0.9); background: #f1f3f5; }

/* 加载状态样式 */
.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .quick-options {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .quick-option {
    margin: 0;
  }
  
  .cuisine-grid {
    grid-template-columns: 1fr;
  }
} 

.tabs {
  display: flex;
  justify-content: space-around;
  background: #fff;
  border-radius: 30rpx;
  margin: 0 0 0 0;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.08);
  overflow: hidden;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #888;
  background: #f5f6fa;
  transition: all 0.2s;
}
.tab-item.active {
  color: #fff;
  background: linear-gradient(90deg, #7d8ff2 0%, #8f7adf 100%);
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.12);
}

.card {
  margin: 30rpx 30rpx 0 30rpx;
  border-radius: 30rpx;
  background: #fff;
  box-shadow: 0 8rpx 32rpx rgba(102,126,234,0.10);
  padding: 40rpx 30rpx 30rpx 30rpx;
}

/* 主内容整体容器：上圆角，下直角 */
.main-sheet { background: #fff; margin: -40rpx 0 0 0; border-radius: 28rpx; box-shadow: 0 8rpx 28rpx rgba(0,0,0,0.06); padding: 24rpx; }

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.multi-select-list, .single-select-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 10rpx 0 20rpx 0;
}
.multi-select-item, .single-select-item {
  padding: 16rpx 32rpx;
  background: #f0f0f0;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  border: 2rpx solid transparent;
  transition: all 0.2s;
}
.multi-select-item.selected {
  background: #667eea;
  color: #fff;
  border-color: #764ba2;
  font-weight: bold;
}
.single-select-item.selected {
  background: #764ba2;
  color: #fff;
  border-color: #667eea;
  font-weight: bold;
}

.function-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0 0 0;
  gap: 20rpx;
}

.generate-btn-wrapper {
  display: flex;
  justify-content: center;
  margin: 40rpx 0 0 0;
}
.btn-primary.big {
  font-size: 34rpx;
  padding: 24rpx 0;
  width: 80vw;
  border-radius: 40rpx;
  background: linear-gradient(90deg, #7d8ff2 0%, #8f7adf 100%);
  color: #fff;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(102,126,234,0.12);
}

.btn-secondary {
  font-size: 30rpx;
  padding: 20rpx 40rpx;
  width: 60vw;
  border-radius: 30rpx;
  background: #f8f9fa;
  color: #333;
  font-weight: 500;
  border: 2rpx solid #e9ecef;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  transition: all 0.3s ease;
}

.btn-secondary:active {
  background: #e9ecef;
  transform: scale(0.98);
} 

.unit-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}

.category-title {
  font-size: 28rpx;
  color: #888;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #667eea;
}

.amount-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #888;
  padding: 0 10rpx;
} 

.selected-ingredients-bar {
  display: flex;
  align-items: center;
  margin: 24rpx 0 0 0;
  padding: 0 30rpx;
}
.selected-ingredients-label {
  font-size: 28rpx;
  color: #888;
  margin-right: 10rpx;
  flex-shrink: 0;
}
.selected-ingredients-list {
  display: flex;
  flex-direction: row;
  overflow-x: auto;
  white-space: nowrap;
}
.selected-ingredient-tag {
  display: inline-block;
  background: #6c63ff;
  color: #fff;
  border-radius: 20rpx;
  padding: 8rpx 22rpx;
  font-size: 26rpx;
  margin-right: 12rpx;
  margin-bottom: 4rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(108,99,255,0.08);
} 

.clear-selected-btn {
  margin-left: 10rpx;
  width: 38rpx;
  height: 38rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f2f3f5;
  border-radius: 50%;
  color: #888;
  font-size: 24rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  cursor: pointer;
  transition: background 0.2s, color 0.2s;
}
.clear-selected-btn:active {
  background: #e0e0e0;
  color: #ff4d4f;
}
.clear-selected-btn .iconfont {
  font-size: 24rpx;
} 

.add-custom-btn {
  display: inline-block;
  margin-left: 12rpx;
  padding: 8rpx 22rpx;
  background: #e8eaf6;
  color: #4a5cff;
  border-radius: 20rpx;
  font-size: 26rpx;
  cursor: pointer;
  font-weight: 500;
  border: 1.5px solid #4a5cff;
  transition: background 0.2s, color 0.2s;
}
.add-custom-btn:active {
  background: #d1d9ff;
}
.add-custom-modal {
  position: fixed;
  left: 0; right: 0; top: 0; bottom: 0;
  background: rgba(0,0,0,0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}
.add-custom-modal-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx 30rpx 30rpx;
  max-width: 90vw;
  min-width: 220rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.add-custom-input {
  width: 400rpx;
  height: 30px;
  padding: 18rpx 20rpx;
  font-size: 28rpx;
  border: 1.5px solid #4a5cff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  background: #fff;
  box-sizing: border-box;
}
.add-custom-confirm, .add-custom-cancel {
  margin: 0 12rpx;
  padding: 12rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}
.add-custom-confirm {
  background: #4a5cff;
  color: #fff;
}
.add-custom-cancel {
  background: #f0f0f0;
  color: #888;
} 