/* pages/record/add-record.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 搜索区域 */
.search-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

/* 搜索框 */
.search-box {
  position: relative;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  flex: 1;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  width: 100%;
  padding: 30rpx 80rpx 30rpx 30rpx;
  font-size: 30rpx;
  border: none;
  outline: none;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 32rpx;
}

/* 标签页 */
.tabs {
  display: flex;
  background: white;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.tab-item {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  border-bottom: 4rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  border-bottom-color: #667eea;
  background: #f8f9ff;
}

.tab-text {
  color: #666;
  font-size: 30rpx;
  font-weight: 500;
  transition: color 0.3s ease;
}

.tab-item.active .tab-text {
  color: #667eea;
  font-weight: bold;
}

/* 区块标题 */
.section-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.add-custom-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.add-custom-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(102, 126, 234, 0.3);
}

/* 食物列表 */
.food-list {
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.food-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: all 0.3s ease;
  position: relative;
}

.food-item:last-child {
  border-bottom: none;
}

.food-item:active {
  background-color: #f8f9ff;
  transform: scale(0.98);
}

.food-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.food-name {
  color: #333;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 1.4;
}

.food-type {
  color: #667eea;
  font-size: 24rpx;
  background: #f0f4ff;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  align-self: flex-start;
  font-weight: 500;
}

.food-calories {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-right: 20rpx;
  gap: 4rpx;
}

.calories-text {
  color: #ff6b35;
  font-size: 28rpx;
  font-weight: 600;
}

/* 自定义食物操作 */
.custom-food-item {
  position: relative;
  display: flex;
  align-items: center;
}

.food-image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.food-thumbnail {
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.food-actions {
  display: flex;
  gap: 12rpx;
  margin-left: 20rpx;
}

.action-btn {
  border: none;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  line-height: 1;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.edit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.edit-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 3rpx rgba(102, 126, 234, 0.3);
}

.delete-btn {
  background: linear-gradient(135deg, #ff4757 0%, #ff3742 100%);
  color: white;
}

.delete-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 3rpx rgba(255, 71, 87, 0.3);
}

/* 空状态 */
.empty-state {
  background: white;
  border-radius: 12rpx;
  padding: 100rpx 30rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-text {
  color: #666;
  font-size: 32rpx;
  display: block;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.empty-hint {
  color: #999;
  font-size: 26rpx;
  display: block;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 拍照按钮 */
.camera-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  width: 100rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-size: 0;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.camera-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(102, 126, 234, 0.3);
}

.camera-icon {
  font-size: 36rpx;
}

/* 搜索结果特殊样式 */
.search-results {
  margin-bottom: 20rpx;
}

.search-results .section-title {
  color: #667eea;
  font-size: 30rpx;
}

/* 最近食物特殊样式 */
.recent-foods .section-title {
  color: #333;
  font-size: 32rpx;
}

/* 自定义食物特殊样式 */
.custom-foods .section-title {
  color: #333;
  font-size: 32rpx;
}

/* 响应式优化 */
@media (max-width: 750rpx) {
  .food-item {
    padding: 25rpx;
  }
  
  .food-name {
    font-size: 30rpx;
  }
  
  .calories-text {
    font-size: 26rpx;
  }
  
  .action-btn {
    padding: 10rpx 16rpx;
    font-size: 22rpx;
  }
}