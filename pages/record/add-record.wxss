/* pages/record/add-record.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh; /* 页面全高 */
  display: flex; /* 从顶部按列布局 */
  flex-direction: column;
  justify-content: flex-start; /* 取消全局space-between影响 */
  box-sizing: border-box;
}

/* 搜索区域 */
.search-section {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

/* 搜索框 */
.search-box {
  position: relative;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
  flex: 1;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.search-input {
  width: 100%;
  padding: 30rpx 80rpx 30rpx 30rpx;
  font-size: 30rpx;
  border: none;
  outline: none;
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 32rpx;
}

/* 主要内容区域（双列flex布局，铺满剩余高度） */
.main-content {
  display: flex;
  flex-direction: row;
  width: 100%;
  flex: 1 1 auto; /* 占据搜索区以外的剩余空间 */
  min-height: 0; /* 允许内部滚动时正确收缩 */
  background: #ffffff; /* 整块白色背景 */
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

/* 左侧菜单固定列 */
.sidebar {
  position: relative;
  width: 200rpx;
  flex: 0 0 200rpx;
  min-width: 200rpx;
  background: white;
  border-radius: 12rpx;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  z-index: 1;
}

.menu-item {
  padding: 30rpx 20rpx;
  text-align: center;
  border-left: 4rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
}

.menu-item.active {
  border-left-color: #667eea;
  background: #f8f9ff;
}

.menu-text {
  color: #666;
  font-size: 28rpx;
  font-weight: 500;
  transition: color 0.3s ease;
}

.menu-item.active .menu-text {
  color: #667eea;
  font-weight: bold;
}

/* 右侧内容区域（可压缩，不允许横向溢出） */
.content-area {
  flex: 1 1 auto;
  min-width: 0; /* 关键：允许内容在flex中收缩 */
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  min-height: 400rpx;
  box-sizing: border-box;
  overflow-x: hidden; /* 禁止横向撑破 */
}

/* 文本与布局的溢出保护 */
.food-info { 
  min-width: 0; /* 允许收缩 */
}

/* 区块标题 */
.section-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.add-custom-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.add-custom-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(102, 126, 234, 0.3);
}

/* 食物列表 */
.food-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
  width: 100%;
  overflow: hidden;
}

.food-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  position: relative;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  overflow: hidden; /* 防止横向溢出 */
}

.food-item:active {
  background-color: #e9ecef;
  transform: scale(0.98);
}

.food-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  overflow: hidden;
}

.food-thumbnail {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.food-placeholder {
  font-size: 40rpx;
  color: white;
}

.food-name {
  color: #333;
  font-size: 30rpx;
  font-weight: 600;
  line-height: 1.3;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; /* 名称过长省略 */
}

.food-calories {
  color: #ff6b35;
  font-size: 26rpx;
  font-weight: 600;
}

.food-add {
  width: 50rpx;
  height: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 6rpx rgba(102, 126, 234, 0.3);
  margin-left: 20rpx;
}

/* 自定义食物操作 */
.custom-food-item {
  position: relative;
}

/* 操作区不换行，但不撑破容器 */
.food-actions {
  display: flex;
  gap: 10rpx;
  margin-left: 20rpx;
  flex: 0 0 auto;
  white-space: nowrap;
}

.action-btn {
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 16rpx;
  font-size: 22rpx;
  line-height: 1;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.edit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.edit-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 3rpx rgba(102, 126, 234, 0.3);
}

.delete-btn {
  background: linear-gradient(135deg, #ff4757 0%, #ff3742 100%);
  color: white;
}

.delete-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 3rpx rgba(255, 71, 87, 0.3);
}

/* 空状态 */
.empty-state {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-text {
  color: #666;
  font-size: 32rpx;
  display: block;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.empty-hint {
  color: #999;
  font-size: 26rpx;
  display: block;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
}

/* 拍照按钮 */
.camera-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  width: 100rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  font-size: 0;
  line-height: 1;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.camera-btn:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 4rpx rgba(102, 126, 234, 0.3);
}

.camera-icon {
  font-size: 36rpx;
}

/* 搜索结果特殊样式 */
.search-results {
  margin-bottom: 20rpx;
}

.search-results .section-title {
  color: #667eea;
  font-size: 30rpx;
}

/* 最近食物特殊样式 */
.recent-foods .section-title {
  color: #333;
  font-size: 32rpx;
}

/* 自定义食物特殊样式 */
.custom-foods .section-title {
  color: #333;
  font-size: 32rpx;
}

/* 左侧菜单占位不再需要，隐藏 */
.sidebar-placeholder { display: none; }

/* 列表与项：强制不溢出 */
.custom-foods { width: 100%; overflow: hidden; }
.food-list { width: 100%; overflow: hidden; }
.food-item {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
  overflow: hidden; /* 防止横向溢出 */
}

/* 空白测试内容样式（沿用空状态） */
.blank-content {
  width: 100%;
}