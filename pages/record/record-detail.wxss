/* pages/record/record-detail.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 食物信息 */
.food-info {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.food-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.food-name {
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
}

.food-type {
  color: #667eea;
  font-size: 24rpx;
  background: #f0f4ff;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.food-nutrition {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.nutrition-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f9ff;
  border-radius: 8rpx;
}

.nutrition-label {
  color: #666;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.nutrition-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

/* 表单区域 */
.form-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 15rpx;
  display: block;
}

.form-input {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  background: #fafafa;
}

.form-input:focus {
  border-color: #667eea;
  background: white;
}

.picker-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  background: #fafafa;
}

.picker-value {
  color: #333;
  font-size: 30rpx;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.form-textarea {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 30rpx;
  background: #fafafa;
  min-height: 120rpx;
  line-height: 1.5;
}

.form-textarea:focus {
  border-color: #667eea;
  background: white;
}

/* 计算结果 */
.calculation-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.calculation-title {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.calculation-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.calc-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx;
  color: white;
}

.calc-label {
  font-size: 24rpx;
  margin-bottom: 8rpx;
  opacity: 0.9;
}

.calc-value {
  font-size: 28rpx;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.save-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.save-btn:disabled {
  background: #ccc;
  color: #999;
}

.delete-btn {
  background: #ff4757;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx;
  color: #999;
  font-size: 28rpx;
}