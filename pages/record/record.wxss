/* pages/record/record.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 卡路里汇总卡片 */
.calorie-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.calorie-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.card-subtitle {
  font-size: 24rpx;
  color: #999;
}

.calorie-summary {
  margin-bottom: 30rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 15rpx 0;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-item.highlight {
  background: linear-gradient(135deg, #4ecdc4 0%, #44a08d 100%);
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 0 -20rpx;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-item.highlight .summary-label {
  color: white;
  font-weight: 500;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.summary-value.consumed {
  color: #ff6b6b;
}

.summary-value.remaining {
  color: #4ecdc4;
}

.summary-item.highlight .summary-value {
  color: white;
  font-size: 36rpx;
}

.card-footer {
  text-align: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.footer-text {
  font-size: 26rpx;
  color: #999;
}

/* 添加记录按钮 */
.add-record-section {
  margin-bottom: 20rpx;
}

.add-record-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.add-record-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.4);
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.add-text {
  font-size: 32rpx;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}