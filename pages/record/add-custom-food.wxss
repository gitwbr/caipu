/* pages/record/add-custom-food.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  padding: 0;                 /* 覆盖 app.wxss 的 .container 全局 padding */
  align-items: stretch;       /* 覆盖全局对齐，避免内容被居中 */
  justify-content: flex-start;/* 顶部对齐 */
}

/* 页面头部 */
.header { display: none; }

.header-subtitle { display: none; }

.section-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-left {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.section-hint { color: #9aa0a6; font-size: 24rpx; }
.section-hint-inline { color: #9aa0a6; font-size: 24rpx; }



.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 顶部图标按钮（清空） */
.icon-btn {
  background: none;
  border: none;
  padding: 8rpx 12rpx;
  font-size: 36rpx;
}

.clear-icon { color: #ff6b6b; }

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 0 20rpx 20rpx; /* 置顶：去掉顶部留白 */
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
  padding-bottom: 14rpx;
  border-bottom: 2rpx solid #f5f6fa;
}

/* 表单行 */
.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

/* 表单项 */
.form-item {
  flex: 1;
  margin-bottom: 20rpx;
}

.form-item.half {
  flex: 0 0 calc(50% - 10rpx);
}

/* 标签 */
.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.label.required::after {
  content: ' *';
  color: #ff3b30;
}

/* 输入框 */
.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: #fbfbfb;
}

/* 图片上传样式 */
.image-section {
  margin-top: 10rpx;
}

/* 行内图片区域 */
.image-inline { display: flex; align-items: center; justify-content: space-between; }
.image-inline .label { margin: 0; }
.camera-slot { display: flex; align-items: center; }
.camera-btn {
  padding: 12rpx 22rpx;
  background: #f1f5ff;
  color: #4a67ff;
  border: 1rpx solid #d9e2ff;
  border-radius: 12rpx;
  font-size: 26rpx;
}
.camera-icon { font-size: 32rpx; line-height: 1; }
.thumb-wrap { position: relative; width: 140rpx; height: 140rpx; border-radius: 12rpx; overflow: hidden; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.08); }
.thumb { width: 100%; height: 100%; background: #f6f6f6; }
.remove-thumb { position: absolute; top: 6rpx; right: 6rpx; width: 32rpx; height: 32rpx; border-radius: 50%; background: #ff5757; color: #fff; font-size: 24rpx; line-height: 32rpx; text-align: center; box-shadow: 0 2rpx 6rpx rgba(255,87,87,0.3); }

.image-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-btn {
  flex: 1;
  height: 80rpx;
  background: linear-gradient(135deg, #667eea 0%, #6a88f7 100%);
  color: white;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.image-preview {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.preview-image {
  width: 100%;
  height: 300rpx;
  background-color: #f8f8f8;
}

.image-actions {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  display: flex;
  gap: 10rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  min-width: 60rpx;
}

.action-btn.remove {
  background-color: rgba(255, 59, 48, 0.9);
  color: white;
}

.input {
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.input:focus {
  border-color: #007aff;
  outline: none;
}

.input::placeholder {
  color: #999;
}

/* 能量输入组件 */
.energy-input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.energy-input {
  flex: 1;
}

.unit-picker {
  flex: 0 0 120rpx;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.unit-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 底部操作区 */
.bottom-actions {
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #00c9a7, #00a387);
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.submit-btn:active { transform: scale(0.98); }

.submit-btn.loading {
  background: #ccc;
  color: #999;
}

.submit-btn:disabled {
  background: #ccc;
  color: #999;
}

/* 底部间距 */
.bottom-spacing {
  height: 120rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .form-row {
    flex-direction: column;
    gap: 0;
  }
  
  .form-item.half {
    flex: 1;
  }
}

/* 输入框聚焦效果 */
.input:focus {
  border-color: #007aff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

/* 数字输入框特殊样式 */
input[type="number"],
input[type="digit"] {
  text-align: right;
}

/* 表单验证错误状态 */
.input.error {
  border-color: #ff3b30;
  box-shadow: 0 0 0 4rpx rgba(255, 59, 48, 0.1);
}

/* 加载状态 */
.loading {
  opacity: 0.6;
  pointer-events: none;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-section {
  animation: fadeIn 0.3s ease-out;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 6rpx;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
} 