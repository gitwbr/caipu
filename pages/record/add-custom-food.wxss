/* pages/record/add-custom-food.wxss */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 页面头部 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  position: sticky;
  top: 0;
  z-index: 100;
}



.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.clear-btn {
  background: none;
  border: none;
  color: #ff3b30;
  font-size: 28rpx;
  padding: 10rpx;
}

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 20rpx;
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

/* 表单行 */
.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

/* 表单项 */
.form-item {
  flex: 1;
  margin-bottom: 20rpx;
}

.form-item.half {
  flex: 0 0 calc(50% - 10rpx);
}

/* 标签 */
.label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.label.required::after {
  content: ' *';
  color: #ff3b30;
}

/* 输入框 */
.input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.input:focus {
  border-color: #007aff;
  outline: none;
}

.input::placeholder {
  color: #999;
}

/* 能量输入组件 */
.energy-input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.energy-input {
  flex: 1;
}

.unit-picker {
  flex: 0 0 120rpx;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.unit-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

/* 底部操作区 */
.bottom-actions {
  padding: 30rpx;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #007aff, #0056cc);
  color: #fff;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, #0056cc, #004499);
}

.submit-btn.loading {
  background: #ccc;
  color: #999;
}

.submit-btn:disabled {
  background: #ccc;
  color: #999;
}

/* 底部间距 */
.bottom-spacing {
  height: 120rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .form-row {
    flex-direction: column;
    gap: 0;
  }
  
  .form-item.half {
    flex: 1;
  }
}

/* 输入框聚焦效果 */
.input:focus {
  border-color: #007aff;
  box-shadow: 0 0 0 4rpx rgba(0, 122, 255, 0.1);
}

/* 数字输入框特殊样式 */
input[type="number"],
input[type="digit"] {
  text-align: right;
}

/* 表单验证错误状态 */
.input.error {
  border-color: #ff3b30;
  box-shadow: 0 0 0 4rpx rgba(255, 59, 48, 0.1);
}

/* 加载状态 */
.loading {
  opacity: 0.6;
  pointer-events: none;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.form-section {
  animation: fadeIn 0.3s ease-out;
}

/* 滚动条样式 */
::-webkit-scrollbar {
  width: 6rpx;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 3rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
} 