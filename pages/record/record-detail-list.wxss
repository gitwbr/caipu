/* pages/record/record-detail-list.wxss */

/* 自定义导航栏 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e5e5e5;
  z-index: 999;
  padding-top: 44rpx; /* 状态栏高度 */
}

.navbar-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 30rpx;
}

.navbar-left {
  width: 80rpx;
}

.back-btn {
  font-size: 40rpx;
  color: #333;
  font-weight: 300;
}

.navbar-center {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
}

.date-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 10rpx;
}

.date-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1;
}

.weekday-text {
  font-size: 20rpx;
  color: #666;
  line-height: 1;
  margin-top: 2rpx;
}

.calendar-icon {
  font-size: 20rpx;
  color: #999;
  margin-left: 8rpx;
}

.navbar-right {
  width: 80rpx;
  display: flex;
  justify-content: flex-end;
}

.menu-btn {
  font-size: 32rpx;
  color: #333;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-top: 132rpx; /* 导航栏高度 + 状态栏高度 + 间距 */
}



/* 悬浮日历 */
.calendar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  padding-top: 200rpx;
}

.calendar-popup {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  width: 90%;
  max-width: 600rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.3);
}

/* 日历头部 */
.calendar-header {
  margin-bottom: 20rpx;
}

.calendar-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.nav-arrow {
  font-size: 40rpx;
  color: #666;
  padding: 10rpx;
  cursor: pointer;
}

.calendar-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 星期标题 */
.weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 10rpx;
  margin-bottom: 10rpx;
}

.weekday {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 0;
}

/* 日历网格 */
.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 8rpx;
}

.calendar-day {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80rpx;
  border-radius: 8rpx;
  cursor: pointer;
  transition: all 0.2s;
}

.calendar-day:active {
  background-color: #f0f0f0;
}

.day-number {
  font-size: 28rpx;
  color: #333;
}

.calendar-day.other-month .day-number {
  color: #ccc;
}

.calendar-day.selected {
  background-color: #4ecdc4;
}

.calendar-day.selected .day-number {
  color: white;
  font-weight: 600;
}

.calendar-day.has-record .day-number {
  color: #ff6b6b;
  font-weight: 600;
}

.calendar-day.selected.has-record .day-number {
  color: white;
}

/* 记录点 */
.record-dot {
  position: absolute;
  bottom: 8rpx;
  width: 8rpx;
  height: 8rpx;
  background-color: #ff6b6b;
  border-radius: 50%;
}

.calendar-day.selected .record-dot {
  background-color: white;
}

/* 卡路里汇总 */
.calorie-summary {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.summary-value.consumed {
  color: #ff6b6b;
}

.summary-value.remaining {
  color: #4ecdc4;
}

/* 添加记录按钮 */
.add-record-section {
  margin-bottom: 20rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
}

.add-record-btn {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.quick-record-btn {
  flex: 1;
  background: linear-gradient(135deg, #ff9a56 0%, #ff6b6b 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.3);
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.add-text {
  font-size: 32rpx;
}

.quick-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.quick-text {
  font-size: 32rpx;
}

/* 记录列表 */
.records-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.record-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

.records-list {
  margin-bottom: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.food-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.food-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-right: 12rpx;
}

.record-type-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.record-type-tag.standard {
  background-color: #e3f2fd;
  color: #1976d2;
}

.record-type-tag.custom {
  background-color: #f3e5f5;
  color: #7b1fa2;
}

.record-type-tag.quick {
  background-color: #fff3e0;
  color: #f57c00;
}

.food-details {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.food-quantity {
  font-size: 26rpx;
  color: #666;
}

.food-time {
  font-size: 24rpx;
  color: #999;
}

.record-calories {
  margin: 0 20rpx;
}

.calories-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.record-actions {
  margin-left: auto;
}

.delete-btn {
  background: #ff6b6b;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #ccc;
  display: block;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
} 