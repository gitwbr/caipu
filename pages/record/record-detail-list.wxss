/* pages/record/record-detail-list.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 日期选择器 */
.date-selector {
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.date-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.date-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.date-icon {
  font-size: 28rpx;
}

/* 卡路里汇总 */
.calorie-summary {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.summary-item:last-child {
  margin-bottom: 0;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.summary-value.consumed {
  color: #ff6b6b;
}

.summary-value.remaining {
  color: #4ecdc4;
}

/* 添加记录按钮 */
.add-record-section {
  margin-bottom: 20rpx;
}

.add-record-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
}

.add-icon {
  font-size: 36rpx;
  margin-right: 10rpx;
}

.add-text {
  font-size: 32rpx;
}

/* 记录列表 */
.records-section {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.record-count {
  font-size: 28rpx;
  color: #999;
  margin-left: 10rpx;
}

.records-list {
  margin-bottom: 20rpx;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.record-item:last-child {
  border-bottom: none;
}

.record-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.food-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.food-quantity {
  font-size: 26rpx;
  color: #666;
}

.record-calories {
  margin: 0 20rpx;
}

.calories-value {
  font-size: 28rpx;
  font-weight: 600;
  color: #ff6b6b;
}

.record-actions {
  margin-left: auto;
}

.delete-btn {
  background: #ff6b6b;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
  min-width: 80rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 20rpx;
}

.empty-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  display: block;
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #ccc;
  display: block;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
} 