<!--pages/record/record.wxml-->
<view class="container">
  <!-- 卡路里汇总卡片 -->
  <view class="calorie-card" bindtap="onTapRecordArea">
    <view class="card-header">
      <text class="card-title">今日营养摄入</text>
      <text class="card-subtitle">点击查看详情</text>
    </view>
    
    <view class="calorie-summary">
      <view class="summary-item">
        <text class="summary-label">基础代谢</text>
        <text class="summary-value">{{calorieBudget}} kcal</text>
      </view>
      <view class="summary-item">
        <text class="summary-label">已摄入</text>
        <text class="summary-value consumed">{{consumedCalories}} kcal</text>
      </view>
      <view class="summary-item highlight">
        <text class="summary-label">还可摄入</text>
        <text class="summary-value remaining">{{remainingCalories}} kcal</text>
      </view>
    </view>
    
    <view class="card-footer">
      <text class="footer-text">📊 点击查看详细记录</text>
    </view>
  </view>

  <!-- 添加记录按钮 -->
  <view class="add-record-section">
    <view class="add-buttons">
      <button class="add-record-btn" bindtap="addRecord">
        <text class="add-icon">+</text>
        <text class="add-text">添加记录</text>
      </button>
      <button class="add-record-btn secondary" bindtap="quickRecord">
        <text class="add-icon">⚡</text>
        <text class="add-text">快速记录</text>
      </button>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading-state" wx:if="{{loading}}">
    <text class="loading-text">加载中...</text>
  </view>
</view>