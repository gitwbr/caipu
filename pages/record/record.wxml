<!--pages/record/record.wxml-->
<view class="container">
  <view class="cards-container">
    <!-- 饮食运动记录卡片 -->
    <view class="card diet-exercise-card" bindtap="onTapRecordArea">
      <view class="card-header">
        <text class="card-title">饮食运动记录</text>
        <text class="card-status">今日未记录</text>
      </view>
      
      <view class="calorie-summary">
        <view class="remaining-calories">
          <text class="remaining-value">{{remainingCalories}}</text>
          <text class="remaining-label">还可摄入(千卡)</text>
        </view>
        <view class="intake-boxes">
          <view class="intake-box diet">
            <text class="intake-value">{{consumedCalories}}</text>
            <text class="intake-label">饮食</text>
          </view>
          <view class="intake-box exercise">
            <text class="intake-value">{{exerciseCalories}}</text>
            <text class="intake-label">运动</text>
          </view>
        </view>
      </view>
      
      <view class="record-buttons">
        <view class="record-btn diet-btn" bindtap="addRecord" catchtap="addRecord">
          <view class="btn-icon">🍽️</view>
          <text class="btn-text">记录饮食</text>
        </view>
        <view class="record-btn exercise-btn" bindtap="addExercise" catchtap="addExercise">
          <view class="btn-icon">🏃</view>
          <text class="btn-text">记录运动</text>
        </view>
      </view>
      
      <view class="card-arrow">></view>
    </view>

    <!-- 体重进度卡片 -->
    <view class="card weight-card">
      <view class="weight-header">
        <text class="weight-title">体重进度</text>
      </view>
      <view class="weight-content">
        <view class="weight-item">
          <text class="weight-label">初始</text>
          <text class="weight-value">{{initialWeight}} kg</text>
        </view>
        <view class="weight-center">
          <view class="weight-progress">
            <text class="progress-label">已减去(公斤)</text>
            <text class="progress-value">{{weightLost}} kg</text>
          </view>
          <text class="view-plan">查看方案></text>
        </view>
        <view class="weight-item">
          <text class="weight-label">目标</text>
          <text class="weight-value">{{targetWeight}} kg</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading-state" wx:if="{{loading}}">
    <text class="loading-text">加载中...</text>
  </view>
</view>