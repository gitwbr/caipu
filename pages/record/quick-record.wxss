/* pages/record/quick-record.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 顶部日期显示，风格与 record-detail 一致 */
.date-display {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  width: 100%;
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 20rpx 30rpx;
  text-align: center;
}
.date-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #495057;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}
/* 与自定义食物一致的图片行样式 */
.image-inline { display: flex; align-items: center; justify-content: space-between; }
.image-inline .label { margin-bottom: 0; }
.image-inline-slot { display: flex; align-items: center; }
.camera-btn-mini { width: 80rpx; height: 80rpx; border-radius: 12rpx; background: #f0f0f0; display: flex; align-items: center; justify-content: center; font-size: 40rpx; color: #666; }
.thumb-wrap { position: relative; width: 120rpx; height: 120rpx; border-radius: 12rpx; overflow: hidden; }
.thumb { width: 100%; height: 100%; object-fit: cover; }
.remove-thumb { position: absolute; top: 6rpx; right: 6rpx; width: 32rpx; height: 32rpx; border-radius: 50%; background: #ff6b6b; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 24rpx; }

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #007aff;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
  resize: none;
}

.textarea:focus {
  border-color: #007aff;
}

/* 图片上传样式 */
.image-section {
  margin-top: 15rpx;
}

.image-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-btn {
  flex: 1;
  height: 70rpx;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  color: #333;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-btn:active {
  background-color: #e0e0e0;
}

.image-preview {
  position: relative;
  margin-top: 20rpx;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  border: 2rpx solid #e0e0e0;
}

.image-actions {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  border: none;
  color: #fff;
}

.action-btn.remove {
  background-color: #ff3b30;
}

.action-btn.remove:active {
  background-color: #d70015;
}

/* 操作按钮样式 */
.actions {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn:disabled {
  opacity: 0.6;
}

.btn-clear {
  background-color: #f0f0f0;
  color: #666;
}

.btn-clear:active {
  background-color: #e0e0e0;
}

.btn-submit {
  background-color: #007aff;
  color: #fff;
}

.btn-submit:active {
  background-color: #0056cc;
}

.btn-submit:disabled {
  background-color: #ccc;
}
