/* pages/record/quick-record.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
}

.input:focus {
  border-color: #007aff;
}

.textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
  resize: none;
}

.textarea:focus {
  border-color: #007aff;
}

/* 图片上传样式 */
.image-section {
  margin-top: 15rpx;
}

.image-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-btn {
  flex: 1;
  height: 70rpx;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  color: #333;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-btn:active {
  background-color: #e0e0e0;
}

.image-preview {
  position: relative;
  margin-top: 20rpx;
}

.preview-image {
  width: 100%;
  height: 300rpx;
  border-radius: 8rpx;
  border: 2rpx solid #e0e0e0;
}

.image-actions {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  border: none;
  color: #fff;
}

.action-btn.remove {
  background-color: #ff3b30;
}

.action-btn.remove:active {
  background-color: #d70015;
}

/* 操作按钮样式 */
.actions {
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn:disabled {
  opacity: 0.6;
}

.btn-clear {
  background-color: #f0f0f0;
  color: #666;
}

.btn-clear:active {
  background-color: #e0e0e0;
}

.btn-submit {
  background-color: #007aff;
  color: #fff;
}

.btn-submit:active {
  background-color: #0056cc;
}

.btn-submit:disabled {
  background-color: #ccc;
}
