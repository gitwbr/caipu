/* pages/record/quick-record.wxss */
.container { padding: 24rpx; min-height: 100vh; background: linear-gradient(135deg,#f8f9fa 0%,#eef1f4 100%); }

/* 顶部日期显示，风格与 record-detail 一致 */
.date-display {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  width: 100%;
  box-sizing: border-box;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  padding: 20rpx 30rpx;
  text-align: center;
}
.date-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #495057;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.form { background: rgba(255,255,255,0.95); border-radius: 20rpx; padding: 28rpx; margin-bottom: 20rpx; box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); border: 1rpx solid rgba(255,255,255,0.6); }
/* 与自定义食物一致的图片行样式 */
.image-inline { display: flex; align-items: center; justify-content: space-between; }
.image-inline .label { margin-bottom: 0; }
.image-inline-slot { display: flex; align-items: center; }
.camera-btn-mini { width: 88rpx; height: 88rpx; border-radius: 14rpx; background: #f7f9fc; border: 2rpx solid #e6e9ef; display: flex; align-items: center; justify-content: center; font-size: 40rpx; color: #6b7280; box-shadow: 0 4rpx 10rpx rgba(0,0,0,.04); }
.thumb-wrap { position: relative; width: 140rpx; height: 140rpx; border-radius: 14rpx; overflow: hidden; box-shadow: 0 6rpx 16rpx rgba(0,0,0,.08); }
.thumb { width: 100%; height: 100%; object-fit: cover; }
.remove-thumb { position: absolute; top: 6rpx; right: 6rpx; width: 34rpx; height: 34rpx; border-radius: 50%; background: #ff6b6b; color: #fff; display: flex; align-items: center; justify-content: center; font-size: 24rpx; box-shadow: 0 4rpx 10rpx rgba(255,107,107,.28); }

.form-item {
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.label { font-size: 28rpx; color: #555; margin-bottom: 12rpx; font-weight: 600; }

.input { width: 100%; height: 80rpx; border: 2rpx solid #e6e9ef; border-radius: 14rpx; padding: 0 22rpx; font-size: 28rpx; color: #333; background: linear-gradient(180deg,#ffffff,#fafbfc); box-sizing: border-box; transition: all .2s ease; }

.input:focus { border-color: #74c0fc; box-shadow: 0 0 0 6rpx rgba(116,192,252,.15); background: #fff; }

.textarea {
  width: 100%;
  min-height: 120rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
  resize: none;
}

.textarea:focus {
  border-color: #007aff;
}

/* 图片上传样式 */
.image-section {
  margin-top: 15rpx;
}

.image-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.image-btn {
  flex: 1;
  height: 70rpx;
  background-color: #f0f0f0;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  color: #333;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.image-btn:active {
  background-color: #e0e0e0;
}

.image-preview {
  position: relative;
  margin-top: 20rpx;
}

.preview-image { width: 100%; height: 300rpx; border-radius: 12rpx; border: 2rpx solid #e6e9ef; box-shadow: 0 6rpx 16rpx rgba(0,0,0,.06); }

.image-actions {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}

.action-btn {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  border: none;
  color: #fff;
}

.action-btn.remove {
  background-color: #ff3b30;
}

.action-btn.remove:active {
  background-color: #d70015;
}

/* 操作按钮样式 */
.actions { display: flex; gap: 16rpx; }
.btn { flex: 1; height: 88rpx; border-radius: 999rpx; font-size: 30rpx; font-weight: 600; border: none; display: flex; align-items: center; justify-content: center; transition: all .15s ease; }
.btn:disabled { opacity: .6; }
.btn-secondary { background: #f3f4f6; color: #6b7280; }
.btn-secondary:active { transform: translateY(1rpx); }
.btn-primary { background: linear-gradient(135deg,#4ecdc4 0%,#44a08d 100%); color: #fff; box-shadow: 0 6rpx 16rpx rgba(78,205,196,.28); }
.btn-primary:active { transform: translateY(1rpx); }
.btn-primary.loading { background: #94d9d5; box-shadow: none; }

/* 分段标题与分隔 */
.section-title { font-size: 30rpx; font-weight: 700; color: #333; margin: 8rpx 0 18rpx; }
.section-divider { height: 2rpx; background: #f0f2f5; margin: 4rpx 0 16rpx; border-radius: 1rpx; }

/* 时间选择器行样式 */
.picker-content { display: flex; align-items: center; justify-content: space-between; height: 80rpx; border: 2rpx solid #e6e9ef; border-radius: 14rpx; padding: 0 22rpx; background: linear-gradient(180deg,#ffffff,#fafbfc); box-shadow: 0 0 0 0 rgba(0,0,0,0); }
.picker-value { font-size: 28rpx; color: #333; }
.picker-arrow { font-size: 28rpx; color: #9aa0a6; }
