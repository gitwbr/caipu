/* 收藏页面样式 */
.page { padding: 0; }
.page-header { text-align: center; padding: 40rpx 0 64rpx 0; background: linear-gradient(135deg, #7d8ff2 0%, #8f7adf 100%); color: #ffffff; margin-bottom: 0; }

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 15rpx;
}

/* 登录状态样式 */
.login-status {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  display: inline-block;
}

.login-status text {
  font-size: 24rpx;
  color: #fff;
}

/* 加载状态样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 收藏列表样式 */
.favorites-list { padding: 0 0; }
.fav-main-sheet { background: #fff; margin: -40rpx 0 0 0; border-radius: 28rpx 28rpx 0 0; box-shadow: 0 8rpx 28rpx rgba(0,0,0,0.06); padding: 24rpx; width: 100%; box-sizing: border-box; }

.favorite-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
}
.card-delete { position: absolute; top: 12rpx; right: 12rpx; width: 60rpx; height: 60rpx; border-radius: 50%; background: #f8f9fa; display: flex; align-items: center; justify-content: center; font-size: 28rpx; color: #e03131; box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.06); }
.card-delete:active { transform: scale(0.92); background: #f1f3f5; }

.favorite-item:active {
  transform: scale(0.98);
}

.card-top { display: flex; align-items: stretch; gap: 20rpx; }
.top-info { flex: 1; display: flex; flex-direction: column; justify-content: center; }
.record-thumb { width: 180rpx; height: 130rpx; border-radius: 12rpx; background: #f3f4f6; overflow: hidden; flex-shrink: 0; display: flex; align-items: center; justify-content: center; }
.record-thumb .thumb { width: 100%; height: 100%; }
.thumb-placeholder { font-size: 32rpx; color: #cbd5e1; }

.card-middle { display: flex; align-items: center; justify-content: space-between; margin-top: 16rpx; }
.calorie-row { display: flex; align-items: center; }
.calorie-badge { display: inline-flex; align-items: center; gap: 10rpx; padding: 10rpx 16rpx; border-radius: 999rpx; background: linear-gradient(90deg,#ffeaa7,#fab1a0); box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.06); }
.calorie-icon { font-size: 24rpx; }
.calorie-value { font-size: 28rpx; font-weight: 700; color: #d63031; }

.card-bottom { margin-top: 14rpx; }

.recipe-info {
  flex: 1;
}

.recipe-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.recipe-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.recipe-meta { display: flex; flex-direction: column; gap: 8rpx; }

.nutrition-info {
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.nutrition-item {
  font-size: 24rpx;
  color: #999;
}

.recipe-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.recipe-actions { display: flex; align-items: center; gap: 12rpx; }

.action-btn {
  width: 60rpx;
  height: 60rpx;
  background: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.action-btn:active {
  background: #e9ecef;
  transform: scale(0.9);
}

.action-icon {
  font-size: 28rpx;
}

.recipe-arrow {
  font-size: 32rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

/* 批量操作样式 */
.batch-actions {
  display: flex;
  gap: 20rpx;
  padding: 30rpx 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.batch-actions button {
  flex: 1;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .recipe-meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 10rpx;
  }
  
  .batch-actions {
    flex-direction: column;
  }
} 