.container { padding: 24rpx; min-height: 100vh; background: linear-gradient(135deg,#f8f9fa 0%,#eef1f4 100%); }
.date-display { background: rgba(255,255,255,.9); border-radius: 20rpx; margin-bottom: 16rpx; box-shadow: 0 4rpx 20rpx rgba(0,0,0,.06); border: 1rpx solid rgba(255,255,255,.3); padding: 20rpx 30rpx; text-align: center; }
.date-text { font-size: 32rpx; font-weight: 700; color: #495057; background: linear-gradient(135deg,#667eea 0%,#764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
.list { background: #fff; border-radius: 20rpx; padding: 8rpx 0; box-shadow: 0 10rpx 28rpx rgba(16,24,40,.06); border: 1rpx solid rgba(255,255,255,0.6); }
.item { display:flex; align-items:center; padding: 28rpx 30rpx; border-bottom: 1rpx solid #f3f4f6; gap: 20rpx; transition: background .15s ease; }
.item:last-child { border-bottom: none; }
.item:active { background: #f9fafb; }
.icon { width: 88rpx; height: 88rpx; border-radius: 16rpx; background: linear-gradient(135deg,#e3f2fd 0%, #e8f5e9 100%); }
.item-main { flex:1; display:flex; flex-direction:column; min-width: 0; }
.title-row { display:flex; align-items:center; justify-content:space-between; gap: 16rpx; }
.title { font-size: 32rpx; color:#0f172a; font-weight: 700; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.method-chip { font-size: 22rpx; color:#3b82f6; background:#eff6ff; border: 1rpx solid #bfdbfe; padding: 6rpx 12rpx; border-radius: 999rpx; white-space: nowrap; }
.desc { font-size: 24rpx; color:#6b7280; margin-top: 8rpx; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient: vertical; overflow: hidden; }


